@model IEnumerable<DynamicMenu.Models.MenuMaster>
@inject RoleManager<IdentityRole> role

@{
    ViewData["Title"] = "GetMenu";
}

<h4 class="mt-2">Menu </h4>

@if (role.Roles.Any())
{
    var roles = role.Roles;
    @foreach (var roleName in roles)
    {
        <div class="form-check form-check-inline">
            <a onclick="location.href='@Url.Action("GetMenuByRole",new { role=@roleName })'">
                <input type="radio" class="form-check-input" name="role">
                <label class="form-check-label">@roleName</label>
            </a>
        </div>
    }
}

<p>
    <a asp-action="AddNew">Add</a>
</p>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent_MenuID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Roll)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.USE_YN)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsParent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent_MenuID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Roll)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuFileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USE_YN)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsParent)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuIdentity">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuIdentity">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

